{
  "schema": "cac.reasoning_mode.v1",
  "schema_version": "1.0.0",
  "kind": "reasoning.mode",
  "meta": {
    "stable_id": "dcp://apm2.agents/mor/mode/rough-set@1",
    "classification": "PUBLIC",
    "created_at": "2025-02-01T00:00:00Z"
  },
  "payload": {
    "id": 27,
    "name": "rough-set",
    "cat": "uncertain",
    "core": "Approximate concepts via lower and upper bounds based on indiscernibility from available features",
    "out": [
      "lower_approximation",
      "upper_approximation",
      "boundary_region",
      "feature_dependency",
      "decision_rules"
    ],
    "proc": [
      "define_indiscernibility_relation_from_features",
      "compute_lower_approximation_definite_members",
      "compute_upper_approximation_possible_members",
      "identify_boundary_region_uncertain_cases",
      "extract_decision_rules_from_approximations",
      "assess_approximation_quality"
    ],
    "check": [
      "features_adequate_for_classification_granularity",
      "lower_bound_membership_is_definite_not_assumed",
      "boundary_region_acknowledged_not_forced_into_categories",
      "approximation_quality_reported",
      "feature_limitations_disclosed"
    ],
    "diff": {
      "fuzzy-logic": "membership_from_observation_granularity_not_degree_of_truth",
      "imprecise-probability": "bounds_on_set_membership_not_probability_intervals",
      "prototype-similarity-based": "equivalence_class_based_not_distance_based"
    },
    "fail": {
      "mode": "approximation_overconfidence",
      "desc": "treating_weak_feature_approximations_as_definitive_classifications",
      "signals": [
        "small_boundary_claimed_despite_limited_features",
        "lower_approximation_asserted_without_feature_adequacy_check",
        "feature_quality_impact_on_approximation_ignored"
      ],
      "mit": [
        "assess_feature_discriminative_power_before_approximation",
        "report_boundary_region_size_as_uncertainty_indicator",
        "seek_additional_features_to_reduce_boundary",
        "use_reducts_to_identify_minimal_sufficient_features"
      ]
    },
    "use": [
      "interpretable_classification",
      "feature_limited_domains",
      "decision_table_analysis",
      "rule_extraction",
      "incomplete_information_systems"
    ],
    "rel": [
      "fuzzy-logic",
      "imprecise-probability",
      "prototype-similarity-based",
      "inductive"
    ],
    "ex": {
      "confusion": {
        "vs_fuzzy": "rough_sets_bound_membership_fuzzy_grades_membership",
        "vs_probabilistic": "rough_sets_epistemic_from_features_probability_is_aleatory",
        "vs_crisp": "rough_sets_admit_boundary_crisp_forces_binary_decision"
      }
    }
  }
}
